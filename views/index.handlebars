<h1>Burgers!</h1>

<h2>burger that are not devoured!</h2>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
            {{#if devoured}}DEVOURED!{{else}}NOT DEVOURED!{{/if}}
        </button>


    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers to be devoured!</h2>

<ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
        {{burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
            {{#if devoured}}DEVOURED!{{else}} NOT DEVOURED!{{/if}}
        </button>


    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<div class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    

    <button id="add-burger" type="button">Add burger</button>
</div>